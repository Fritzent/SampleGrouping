<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:background="#ff0000"
    android:id="@+id/RelativeContainer"
    android:clipToPadding="false"
    android:clipChildren="false">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CardContainer"
        android:layout_margin="5dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="12dp"
        android:visibility="gone">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/Container"
            android:padding="5dp">
            <FrameLayout
                android:id="@+id/ItemContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <FrameLayout
                    android:id="@+id/HomeScreenEmptyProduct"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:visibility="gone">
                    <LinearLayout
                        android:id="@+id/HomeScreenEmptyProductNotOnEdit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        android:orientation="horizontal"
                        android:background="#73ebebeb">
                    </LinearLayout>
                    <FrameLayout
                        android:id="@+id/HomeScreenEmptyProductOnEdit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_plus"
                            android:layout_gravity="center"/>
                        <!--<Button
                            android:id="@+id/ButtonAddItems"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/ripple_transparent"/>-->
                    </FrameLayout>
                </FrameLayout>
                <LinearLayout
                    android:id="@+id/NonGroupItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/ItemName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Hello World!" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/GroupItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/ItemNameGrouping1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Hello World!" />
                    <TextView
                        android:id="@+id/ItemNameGrouping2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Hello World!" />
                    <TextView
                        android:id="@+id/ItemNameGrouping3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Hello World!" />
                    <TextView
                        android:id="@+id/ItemNameGrouping4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Hello World!" />
                </LinearLayout>
            </FrameLayout>
            <LinearLayout
                android:id="@+id/IndicatorGrouping"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/background_group_indicator"
                android:visibility="gone"/>
        </FrameLayout>
    </androidx.cardview.widget.CardView>
    <FrameLayout
        android:id="@+id/DeleteItems"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignEnd="@id/CardContainer"
        android:layout_alignTop="@id/CardContainer"
        android:layout_marginTop="-5dp"
        android:layout_marginEnd="-5dp"
        android:elevation="15dp"
        android:visibility="gone">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_remove"
            android:id="@+id/ImageDelete"/>
        <!--<Button
            android:id="@+id/ButtonDeleteRecyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"/>-->
    </FrameLayout>
</RelativeLayout>
